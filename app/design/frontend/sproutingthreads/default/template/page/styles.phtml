	<?php
		function loadLookbook($name, $arDir) {
			
			$rootUrl = "/var/lookbooks";
			$root = $_SERVER['DOCUMENT_ROOT'].$rootUrl;
			
			$arValid = array("jpg", "png");
		
			foreach($arDir as $dir) {
				$folder = $root."/".$dir;
				
				$arFiles = scandir($folder);
				
				foreach($arFiles as $file) {
					$fullPath = $folder."/".$file;
					
					$url = $rootUrl."/".$dir."/".$file;
					
					$info = new SplFileInfo($fullPath);
					$extension = $info->getExtension();
					
					if (in_array($extension, $arValid)) {
						echo "<a class='lightbox-image' data-lightbox='$name' href='$url'></a>";
					}
				}
			}
		};
		
		loadLookbook("lookbook", array("lookbook"));
		
