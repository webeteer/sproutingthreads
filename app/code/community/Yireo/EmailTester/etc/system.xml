<config>
    <tabs>
        <yireo translate="label" module="emailtester">
            <label>Yireo</label>
            <sort_order>1000</sort_order>
        </yireo>
    </tabs>
    <sections>
        <emailtester translate="label" module="emailtester">
            <label>Email Tester</label>
            <tab>yireo</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Default Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <default_email translate="label">
                            <label>Default Email Target</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </default_email>
                        <default_transactional translate="label">
                            <label>Default Transactional Email</label>
                            <frontend_type>select</frontend_type>
                            <source_model>emailtester/source_emails</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </default_transactional>
                        <default_product translate="label">
                            <label>Default Product</label>
                            <comment><![CDATA[Numerical ID of product entity]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </default_product>
                        <default_customer translate="label">
                            <label>Default Customer</label>
                            <comment><![CDATA[Numerical ID of customer entity]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </default_customer>
                        <default_order translate="label">
                            <label>Default Sales Order</label>
                            <comment><![CDATA[Numerical ID of sales-order entity]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </default_order>
                        <limit_product translate="label">
                            <label>Limit Product List</label>
                            <comment><![CDATA[Set list-size; Use 0 for unlimited]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </limit_product>
                        <limit_customer translate="label">
                            <label>Limit Customer List</label>
                            <comment><![CDATA[Set list-size; Use 0 for unlimited]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </limit_customer>
                        <limit_order translate="label">
                            <label>Limit Sales Order List</label>
                            <comment><![CDATA[Set list-size; Use 0 for unlimited]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>13</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </limit_order>
                        <custom_product translate="label">
                            <label>Custom Product List</label>
                            <comment><![CDATA[CSV-list of entity-IDs]]></comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>21</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </custom_product>
                        <custom_customer translate="label">
                            <label>Custom Customer List</label>
                            <comment><![CDATA[CSV-list of entity-IDs]]></comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>22</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </custom_customer>
                        <custom_order translate="label">
                            <label>Custom Sales Order List</label>
                            <comment><![CDATA[CSV-list of entity-IDs]]></comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>23</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </custom_order>
                        <enable_jquery translate="label">
                            <label>Enable jQuery core</label>
                            <comment><![CDATA[Disable if jQuery is already loaded]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>31</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_jquery>
                        <enable_jqueryui translate="label">
                            <label>Enable jQuery UI</label>
                            <comment><![CDATA[Disable if jQuery UI is already loaded]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>32</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_jqueryui>
                        <fix_header translate="label">
                            <label>Fix header</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>32</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </fix_header>
                    </fields>
                </settings>
            </groups>
        </emailtester>
    </sections>
</config>
